<Page x:Class="Presentation.WPF.Views.RacePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.WPF.Views"
        mc:Ignorable="d"
        Title="RacePage"  Height="600" Width="1040">
    <Grid Height="600">
        <DataGrid Grid.Column="0" Grid.Row="0" Margin="51,40,76,88" ItemsSource="{Binding Ranking}" />
        <Button x:Name="button" Content="Старт" HorizontalAlignment="Left" Height="41" Margin="51,538,0,0" VerticalAlignment="Top" Width="148"  Command="{Binding StartHandler}"/>
    </Grid>
</Page>
